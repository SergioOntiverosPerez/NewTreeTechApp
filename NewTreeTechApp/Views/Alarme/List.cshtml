@{
    ViewBag.Title = "Alarmes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 id="counter"></h2>

<p>
    <a id="newAlarme" onclick="NewAlarme()" class="btn btn-primary">Novo Alarme</a>
</p>

<input type="text" id="searchAlarme" onkeyup="SearchAlarme()" placeholder="Search for name..." class="form-control-sm" />


<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Descrição do Alarme</th>
            <th scope="col">Classificação do Alarme</th>
            <th scope="col">Equipamento Relacionado</th>
            <th scope="col">Data de Cadastro</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody id="alarmes">
    </tbody>
</table>


@section Scripts{
    <script src="~/js/alarmes.js" asp-append-version="true"></script>
    <script type="text/javascript">getAlarmes();</script>
}
