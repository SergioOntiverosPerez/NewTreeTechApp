@{
    ViewBag.Title = "Equipamentos";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 id="counter"></h2>

<p>
    <a id="newEquipamento" onclick="NewEquipamento()" class="btn btn-primary">Novo Equipamento</a>
</p>

<input type="text" id="searchEquip" onkeyup="SearchEquipamento()" placeholder="Search for name..." class="form-control-sm" />


<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Nome do Equipamento</th>
            <th scope="col">Numero de Serie</th>
            <th scope="col">Tipo</th>
            <th scope="col">Data de Cadastro</th>
            <th scope="col"></th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody id="equipamentos">
    </tbody>
</table>


@section Scripts{
    <script src="~/js/equipamentos.js" asp-append-version="true"></script>
    <script type="text/javascript">getEquipamentos();</script>
}
