@model NewTreeTechApp.ViewModels.EquipamentoViewModel
@{
    ViewBag.Title = "@Model.Title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Equipamentos"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.NomeDoEquipamento)
        @Html.TextBoxFor(m => m.NomeDoEquipamento, new { @class = "form-control", @placeholder = "Entre o nome do equipamento" })
        @Html.ValidationMessageFor(m => m.NomeDoEquipamento)
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.NumeroDeSerie)
        @Html.TextBoxFor(m => m.NumeroDeSerie, new { @class = "form-control", @placeholder = "Entre o nome do numero de serie" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Tipo)
        <select asp-for="@Model.Tipo" asp-items="Html.GetEnumSelectList<TipoEquipamento>()" class="form-control">
            <option selected="selected" value="">Selecione o tipo de Equipamento</option>
        </select>
        <span asp-validation-for="@Model.Tipo" class="text-danger"/>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.DataDeCadastro)
        @Html.TextBoxFor(m => m.DataDeCadastro, "{0:d MMM yyyy}", new { @class = "form-control", @placeholder = "Ex: 01 Jan 2021" })
    </div>

    @Html.HiddenFor(m => m.Id)
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a asp-action="List" class="btn btn-info">Voltar</a>
}